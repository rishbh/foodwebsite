<!-- now making the two sided sections-->
  <section class="hero py-10 "> <!--applying class ="hero"-->
      <div class="container mx-auto flex items-center justify-between">

        <div class=" w-1/2">
          <h6 class="text-lg"><em>Are you hungry?</em></h6>
          <h1 class="text-3xl md:text-6xl font-bold">Don't Wait!!</h1>
          <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"><a href="/cart">Order Now</a></button>
        </div>


        <div class="w-2/5 ">
           <img src="\img\hero-pizza.png">
        </div>
      </div>
  </section>

<!--Making another section MENU-->

  <section class="container mx-auto  py-8">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16" >  <!-- outer wala whole carts-->

<% pizzas.forEach(function(pizza){%><!--this loop runs for every elemnt of array pizzas-->
       <!--                      One Card         ************-->
       <div class="w-full md:w-64"><!--one card-->
        <img src="\img\<%=pizza.image%>" class="h-40 mb-4 mx-auto">

        <div class="text-center"><!--for the making of price and for addind ADD button-->
               <h2 class=" mb-4 text-lg font-bold"><%=pizza.name%></h2>
               <span class="size py-1 px-4 rounded-full uppercase text-xs" ><%=pizza.size%></span>
                 
              <div class="flex items-center justify-around mt-6">
                <span class="text-lg font-bold ">Rs.<%=pizza.price%></span>
                <button data-pizza="<%=JSON.stringify(pizza)%>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold ">
                  <span>+</span>
                  <span class="ml-4">Add</span>
                </button>

              </div>

        </div>

      </div>
<% })%>
        
  </section>






 